{
  "id": "com.scinan.api",
  "version": "1.0.7",
  "compatibility": ">=3.0.0",
  "sdk": 2,
  "name": {
    "en": "Scinan",
    "no": "Scinan"
  },
  "description": {
    "en": "Support IoT devices/controllers using Scinan api. Add thermostats from Saswell, Prosmart and other brands thats are using the Scinan API."
  },
  "category": [
    "climate"
  ],
  "tags": {
    "en": [
      "Profag",
      "Saswell"
    ],
    "no": [
      "Profag",
      "Saswell"
    ]
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Petter Ruud",
    "email": "petterruud@gmail.com"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "petterruud"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/PetterRuud/com.scinan.api/issues"
  },
  "source": "https://github.com/PetterRuud/com.scinan.api",
  "capabilities": {
    "mode": {
      "type": "enum",
      "title": {
        "en": "Function Mode",
        "no": "Funskjoner"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "picker",
      "values": [
        {
          "id": "auto",
          "title": {
            "en": "Auto",
            "no": "Auto"
          }
        },
        {
          "id": "comfort",
          "title": {
            "en": "Comfort",
            "no": "Komfort"
          }
        },
        {
          "id": "day_or_night",
          "title": {
            "en": "Day or Night",
            "no": "Dag eller natt"
          }
        }
      ]
    },
    "away": {
      "type": "boolean",
      "title": {
        "en": "Away",
        "no": "Borte"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "toggle",
      "icon": "/assets/away.svg"
    }
  },
  "drivers": [
    {
      "id": "SAS920FHL7WWIFI",
      "name": {
        "en": "Saswell SAS920FHL-7W-WIFI",
        "no": "Saswell SAS920FHL-7W-WIFI"
      },
      "images": {
        "small": "drivers/SAS920FHL7WWIFI/assets/images/small.jpg",
        "large": "drivers/SAS920FHL7WWIFI/assets/images/large.jpg"
      },
      "class": "thermostat",
      "capabilities": [
        "onoff",
        "mode",
        "target_temperature",
        "measure_temperature",
        "away"
      ],
      "capabilitiesOptions": {
        "measure_power": {
          "approximated": true
        }
      },
      "pair": [
        {
          "id": "start",
          "template": "login_credentials",
          "navigation": {
            "next": "list_my_devices"
          },
          "options": {
            "logo": "pair_logo.jpg",
            "usernameLabel": "Saswell account",
            "usernamePlaceholder": "user@domain.com",
            "passwordLabel": "Password",
            "passwordPlaceholder": "Password"
          }
        },
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Update device time",
            "no": "Oppdater intervall for henting av data"
          },
          "children": [
            {
              "id": "interval",
              "type": "number",
              "label": {
                "en": "minutes",
                "no": "minutter"
              },
              "value": 15,
              "min": 5,
              "max": 60
            }
          ]
        }
      ]
    },
    {
      "id": "PST50W",
      "name": {
        "en": "Profag PST50W",
        "no": "Profag PST50W"
      },
      "images": {
        "small": "drivers/PST50W/assets/images/small.jpg",
        "large": "drivers/PST50W/assets/images/large.jpg"
      },
      "class": "thermostat",
      "capabilities": [
        "onoff",
        "mode",
        "target_temperature",
        "measure_temperature",
        "away"
      ],
      "capabilitiesOptions": {
        "measure_power": {
          "approximated": true
        }
      },
      "pair": [
        {
          "id": "start",
          "template": "login_credentials",
          "navigation": {
            "next": "list_my_devices"
          },
          "options": {
            "logo": "pair_logo.svg",
            "usernameLabel": "Profag account",
            "usernamePlaceholder": "user@domain.com",
            "passwordLabel": "Password",
            "passwordPlaceholder": "Password"
          }
        },
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Update device time",
            "no": "Oppdater intervall for henting av data"
          },
          "children": [
            {
              "id": "interval",
              "type": "number",
              "label": {
                "en": "minutes",
                "no": "minutter"
              },
              "value": 15,
              "min": 5,
              "max": 60
            }
          ]
        }
      ]
    }
  ]
}