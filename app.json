{
  "id":"com.scinan.api",
  "version":"1.0.0",
  "compatibility":">=2.0.0",
  "sdk":2,
  "name":{
     "en":"Scinan Wifi"
  },
  "description":{
     "en":"Support wifi climate controllers using scinan api"
  },
  "category":[
     "climate"
  ],
  "tags":{
     "en":[
        "Profag",
        "Prosmart",
        "Saswell"
     ]
  },
  "permissions":[

  ],
  "images":{
     "large":"/assets/images/large.png",
     "small":"/assets/images/small.png"
  },
  "author":{
     "name":"Petter Ruud",
     "email":"petterruud@gmail.com"
  },
  "capabilities":{
     "mode":{
        "type":"enum",
        "title":{
           "en":"Function Mode"
        },
        "getable":true,
        "setable":true,
        "uiComponent":"picker",
        "uiQuickAction":true,
        "values":[
           {
              "id":"auto",
              "title":{
                 "en":"Auto"
              }
           },
           {
              "id":"comfort",
              "title":{
                 "en":"Comfort"
              }
           },
           {
              "id":"day_or_night",
              "title":{
                 "en":"Day or Night"
              }
           }
        ]

   },
     "away":{
        "type":"boolean",
        "title":{
           "en":"Away"
        },
        "getable":true,
        "setable":true
     }
  },
  "drivers":[
     {
        "id":"scinan",
        "name":{
           "en":"Scinan"
        },
        "images":{
           "small":"drivers/scinan/assets/images/small.jpg",
           "large":"drivers/scinan/assets/images/large.jpg"
        },
        "class":"thermostat",
        "capabilities":[
           "onoff",
           "mode",
           "target_temperature",
           "measure_temperature",
           "away"
        ],
        "pair":[
           {
              "id":"start",
              "template":"login_credentials",
              "navigation":{
                 "next":"list_my_devices"
              },
              "options":{
                 "logo":"pair_logo.jpg",
                 "usernameLabel":"Scinan account",
                 "usernamePlaceholder":"user@domain.com",
                 "passwordLabel":"Password",
                 "passwordPlaceholder":"Password"
              }
           },
           {
              "id":"list_my_devices",
              "template":"list_devices",
              "navigation":{
                 "next":"add_my_devices"
              }
           },
           {
              "id":"add_my_devices",
              "template":"add_devices"
           }
        ],
        "settings":[
           {
              "type":"group",
              "label":{
                 "en":"Update device time"
              },
              "children":[
                 {
                    "id":"interval",
                    "type":"number",
                    "label":{
                       "en":"minutes"
                    },
                    "value":15,
                    "min":5,
                    "max":60
                 }
              ]
           }
        ]
     }
  ]
}